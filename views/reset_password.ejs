<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redefinir Senha | EcoAlerta</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
    <style>
        /* Variáveis de Tema */
        :root {
            --primary-color: #1C563F;
            --secondary-color: #76C25A; 
            --background-color: #E2E3E5; 
            --card-bg: #ffffff; 
            --text-color: #333;
            --border-color: #e0e0e0;
            --input-bg: #f9f9f9; 
        }

        body.dark-theme {
            --primary-color: #76C25A;
            --secondary-color: #1C563F;
            --background-color: #121212; 
            --card-bg: #1f1f1f;
            --text-color: #E0E0E0;
            --border-color: #333333;
            --input-bg: #2a2a2a; 
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--background-color);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            color: var(--text-color);
            transition: background-color 0.3s;
        }

        .reset-container {
            background: var(--card-bg);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
            text-align: center;
            border: 1px solid var(--border-color);
            position: relative;
        }

        .logo-img {
            width: 120px;
            margin-bottom: 20px;
        }

        h2 {
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        p {
            font-size: 0.9em;
            margin-bottom: 30px;
            opacity: 0.8;
        }

        .input-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .input-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .input-group input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            font-size: 15px;
            background-color: var(--input-bg);
            color: var(--text-color);
            box-sizing: border-box; /* Garante que o padding não aumente a largura */
        }

        .btn-submit {
            width: 100%;
            padding: 15px;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 50px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-top: 10px;
        }

        .btn-submit:hover {
            background-color: var(--secondary-color);
        }

        /* Botão de Tema */
        .theme-toggle-float {
            position: absolute;
            top: 20px;
            right: 20px;
            background: transparent;
            border: none;
            font-size: 1.5em;
            color: var(--primary-color);
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="reset-container">
        <button id="theme-toggle" class="theme-toggle-float"><i class='bx bxs-moon'></i></button>
        
        <img src="/img/EcoAlerta.png" alt="EcoAlerta" class="logo-img">
        
        <h2>Redefinir Senha</h2>
        <p>Insira sua nova senha abaixo.</p>

        <form action="/reset-password/<%= token %>" method="POST" onsubmit="return validatePassword()">
            <div class="input-group">
                <label for="password">Nova Senha</label>
                <input type="password" id="password" name="password" required placeholder="Mínimo 6 caracteres">
            </div>

            <div class="input-group">
                <label for="confirmPassword">Confirmar Senha</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required placeholder="Repita a senha">
            </div>

            <button type="submit" class="btn-submit">Alterar Senha</button>
        </form>
    </div>

    <script>
        /* Validação simples de senha */
        function validatePassword() {
            const p1 = document.getElementById('password').value;
            const p2 = document.getElementById('confirmPassword').value;
            if (p1.length < 6) {
                alert('A senha deve ter pelo menos 6 caracteres.');
                return false;
            }
            if (p1 !== p2) {
                alert('As senhas não conferem.');
                return false;
            }
            return true;
        }

        /* Tema */
        const themeToggle = document.getElementById('theme-toggle');
        const body = document.body;
        const savedTheme = localStorage.getItem('theme');

        if (savedTheme === 'dark') {
            body.classList.add('dark-theme');
            themeToggle.innerHTML = "<i class='bx bxs-sun'></i>";
        }

        themeToggle.addEventListener('click', () => {
            body.classList.toggle('dark-theme');
            const isDark = body.classList.contains('dark-theme');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            themeToggle.innerHTML = isDark ? "<i class='bx bxs-sun'></i>" : "<i class='bx bxs-moon'></i>";
        });
    </script>
</body>
</html>